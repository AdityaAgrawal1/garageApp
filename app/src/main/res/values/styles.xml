<resources>
        <style name="EditText.Style" parent="Widget.AppCompat.EditText">
            <item name="android:textColorHint">#21B9AA</item>
            <item name="android:padding">12dp</item>
            <item name="android:textColor">#21B9AA</item>
            <item name="android:textSize">14sp</item>
            <item name="android:textStyle">bold</item>
            <item name="android:layout_marginTop">24dp</item>
            <item name="maxLines">1</item>
            <item name="hintAnimationEnabled">true</item>
            <item name="android:selectAllOnFocus">true</item>
        </style>

        <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <item name="boxStrokeColor">#21B9AA</item>
            <item name="boxStrokeWidth">1dp</item>
            <item name="android:textColorHint">#777777</item>
            <item name="android:layout_marginTop">20dp</item>
        </style>

        <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <item name="boxStrokeColor">#21B9AA</item>
            <item name="boxStrokeWidth">1dp</item>
            <item name="android:textColorHint">#777777</item>
        </style>

        <style name="TextInputDropdownLayoutStyle"
            parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
            <item name="boxStrokeColor">#21B9AA</item>
            <item name="boxStrokeWidth">1dp</item>
            <item name="android:textColorHint">#21B9AA</item>
            <item name="endIconTint">#21B9AA</item>
        </style>

        <style name="TopNavigation.ImageButton" parent="Widget.AppCompat.ImageButton">
            <item name="tint">@color/white</item>
            <item name="backgroundTint">#00000000</item> <!--transparent-->
        </style>

        <style name="ProgressBarColor">
            <item name="colorAccent">?attr/colorPrimary</item> <!-- Whatever color you want-->
        </style>

        <style name="toolbarsearch" parent="Theme.AppCompat.Light.NoActionBar">
            <item name="colorControlActivated">@android:color/white</item>
        </style>
    </resources>
